<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.LinearLayoutCompat xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF"
    android:orientation="vertical"
    tools:context="com.example.android.singlescreenapp.MainActivity">

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:src="@drawable/staritalogo" />


    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/adress"
        android:textAlignment="center"
        android:textSize="@dimen/textSize_XS"
        tools:fontFamily="@font/amiri" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/adress2"
        android:textAlignment="center"
        android:textSize="@dimen/textSize_XS"
        tools:fontFamily="@font/amiri" />

    <Button
        android:id="@+id/telefono"
        style="@style/buttonstyle"
        android:background="#FFFFFF"
        android:onClick="chiama"
        android:text="@string/phone_number"
        android:textAlignment="center" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="180dp"
        android:layout_marginLeft="@dimen/paddingOrMar_XXXL"
        android:layout_marginRight="@dimen/paddingOrMar_XXXL"
        android:scaleType="fitCenter"
        android:src="@drawable/starita1" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/paddingOrMar_M"
        android:layout_marginLeft="@dimen/paddingOrMar_XXXL"
        android:layout_marginRight="@dimen/paddingOrMar_XXXL"
        android:orientation="horizontal">

        <ImageButton
            android:id="@+id/sito"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/paddingOrMar_L"
            android:layout_weight="1"
            android:background="#FFFFFF"
            android:onClick="vaialsito"
            android:scaleType="centerInside"
            android:src="@drawable/website" />

        <ImageButton
            android:id="@+id/indicazioni"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/paddingOrMar_L"
            android:layout_weight="1"
            android:background="#FFFFFF"
            android:onClick="aprigooglemaps"
            android:scaleType="centerInside"
            android:src="@drawable/mappoint" />

    </LinearLayout>


</android.support.v7.widget.LinearLayoutCompat>
